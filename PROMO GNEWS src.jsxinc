  if (layerFilesArray.length > 0) {
    var layerFilesStr = '';

    for (m = 0; m < layerFilesArray.length; m++) {
      layerFilesStr += '\n    ' + layerFilesArray[m];
    }
    alert('this files were copied but not relinked:' + layerFilesStr);
  }
}

