  for (i = 0; i < ftgItemArray.length; i++) {
    ftgFile = ftgItemArray[i].file;
    sameFileArray = [ftgItemArray[i]];

    for (f = 0; f < ftgItemArray.length; f++) {
      var testFile = ftgItemArray[f].file;

