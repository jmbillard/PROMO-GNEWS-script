  blkFill.property('ADBE Vector Fill Color').expression = blkStr;
  blkGrp.property('ADBE Vector Transform Group').position.setValue([170,60]);
  blkGrp.name = 'BLACK';
  blkFill.name = 'GNEWS BLACK';

  var wteGrp = contents.addProperty('ADBE Vector Group');
  wteGrp.property('ADBE Vectors Group').addProperty('ADBE Vector Shape - Rect');
